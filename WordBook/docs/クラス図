classDiagram
    class User {
        Long id
        String username
        String password
        String book
    }

    class Word {
        Long id
        String question
        String answer
        String book
        User user
    }

    class UserController
    class WordController
    class UserService
    class WordService
    class UserRepository
    class WordRepository

    User --> Word : 1 to many
    UserController --> UserService
    WordController --> WordService
    UserService --> UserRepository
    WordService --> WordRepository
